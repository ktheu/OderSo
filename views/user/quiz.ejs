<body>
  <div class="container">
    <div class="jumbotron my-3">
      <h1 class="display-4"><%=oderSo.spruch %> ...</h1>
      <p class="lead">... oder so.</p>
      <hr class="my-4">
    </div>

    <form action="/user/antwort" method="POST">
      <div class="form-group">
        <label for="antwort">Wie hei√üt das gesuchte Wort?</label>
        <input type="text" class="form-control" id="antwort" name="antwort" value="<% if (feedback)%><%=antwort%> ">
        <input type="hidden" value="<%= oderSo._id %>" name="id">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
      <a href="/user/next" class="btn btn-warning mx-4">Next</a>
    </form>

    

    <div class="d-flex justify-content-center bd-highlight mb-3">
      <%if (feedback && !ergebnis) { %>
        <div class="mt-2">Nope</div>
        <div class="mx-4"> <i class="fa fa-times-circle fa-3x mx-4"> </i></div>
      <%} else if(feedback && ergebnis) { %>
        <div class="mt-2">Yep</div>
        <div class="mx-4"> <i class="fa fa-thumbs-up fa-3x mx-4"></i> </div>
      <%} %>
    </div>


  </div>




  </div>

